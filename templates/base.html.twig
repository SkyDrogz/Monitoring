<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Nexus Création{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
        {% endblock %}
    </head>
    <body>
        <div class="container">
            <div id="header" class="jumbotron">
                <h2>Nexus Création</h2>
                <a href="{{path('deconnexion')}}" class="btn btn-danger">Deconnexion</a>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <div class="row">
                        <div id="menu" class="col-md-12">
                            <h3>Systèmes</h3>
                            <ul class="nav nav-pills nav-stacked">
                                <li><a href="{{ path('system_consultation') }}">Liste des systèmes</a></li>
                                <li><a href="{{ path('system_new') }}">Ajout d'un système</a></li>
                                <li><a href="{{ path('system_active') }}">Réactivation d'un système</a></li>
                            </ul>
                        </div>
                    </div>
                    {% if is_granted('ROLE_USER') %}
                    <div class="row">
                        <div id="menu" class="col-md-12">
                            <h3>Utilisateurs</h3>
                            <ul class="nav nav-pills nav-stacked">
                                <li><a href="{{ path('user_consultation') }}">Liste des utilisateurs</a></li>
                                <li><a href="{{ path('user_new') }}">Ajout d'un utilisateur</a></li>
                                <li><a href="{{ path('user_active') }}">Réactivation d'un utilisateur</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="row">
                        <div id="menu" class="col-md-12">
                            <h3>Entreprises</h3>
                            <ul class="nav nav-pills nav-stacked">
                                <li><a href="{{ path('entreprise_consultation') }}">Liste des entreprises</a></li>
                                <li><a href="{{ path('entreprise_new') }}">Ajout d'une entreprise</a></li>
                                <li><a href="{{ path('entreprise_active') }}">Réactivation d'une entreprise</a></li>
                            </ul>
                        </div>
                    </div>
                    {% endif %}
                </div>
                <div class="col-md-9">
                    {% block body %}

                    {%endblock%}
                </div>
            </div>



                <footer>
                    <p>&copy; {{'now'|date('Y') }} Nexus Création</p>
                </footer>
        </div>
      </head>


                {% block javascripts %}
                    {# lignes Javascript permettant d'utiliser des fonctionnalités du bootstrap twitter #}
                    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
                    <script src="//maxcdn.boostrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
                    {%endblock%}
    </body>
</html>
