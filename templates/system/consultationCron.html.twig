
{% block body %}
<link rel="stylesheet" href="{{ asset('css/test.css') }}">
<font color="white"><h1>Liste des systèmes</h1></font>

<div class="widget stacked widget-table action-table">
				<div class="widget-content">

					<table class="table table-striped table-bordered">
						<thead>
              <tr>
                <th>Nom du système</th>
                <th>URL</th>
                <th>Etat</th>
              </tr>
           </thead>
    <tbody>
    {% for system in systemListe %}
            {% if system.actif == true %}
            <tr>
                <td>{{ system.nom}}</td>
                <td>{{ system.url }}</td>
                {% if system.etat == "Online" %}
                <td><font color="green"><b>{{ system.etat }}</b></color></td>
                {%else%}
                <td><font color="red"><b>{{ system.etat }}</b></color></td>
                {%endif%}
            </tr>
            {%endif%}
    {% endfor %}
    </tbody>

</table>
{% endblock %}

