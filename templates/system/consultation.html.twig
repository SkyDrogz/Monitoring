<table>


    <tr>
        <th>Nom du système</th>
        <th></th>
        <th>URL</th>
    </tr>

    {% for system in systemListe %}

        {% if system.actif == true %}
        <tr>
            <td>{{ system.nom}}</td>
            <td></td>
            <td>{{ system.url }}</td>
            <td><a href="{{ path('system_edit', {'id' : system.id}) }}">Modification du système</a></td>
            <td><a href="{{ path('system_suppression', {'id' : system.id}) }}">Suppression du système</a></td>
        </tr>
        {%endif%}
    {% endfor %}

</table>

