{% extends "base.html.twig" %}
{%block title %}
    {{parent()}} - Réactivation d'un système
{%endblock%}
{%block body %}
<font color="white"><h1>Liste des systèmes</h1></font>

<table width="50%">


    <tr>
        <th>Nom du système</th>
        <th></th>
        <th>URL</th>
    </tr>

    {% for system in systemListe %}

        {% if system.actif == false %}
        <tr>
            <td>{{ system.nom}}</td>
            <td></td>
            <td>{{ system.url }}</td>
            <td><a href="{{ path('system_reactive', {'id' : system.id}) }}" class="btn btn-success">Réactiver le système</a></td>

        </tr>
        {%endif%}
    {% endfor %}

</table>

<a href="{{ path('system') }}" class="btn btn-default">Retour</a>
{% endblock %}
