{% extends "base.html.twig" %}
{%block title %}
    {{parent()}} - Réactivation d'un système
{%endblock%}
{%block body %}
<link rel="stylesheet" href="{{ asset('css/test.css') }}">
<font color="white"><h1>Liste des systèmes</h1></font>

<div class="widget stacked widget-table action-table">
				<div class="widget-content">

					<table class="table table-striped table-bordered">
						<thead>
              <tr>
                <th>Nom du système</th>
                <th>URL</th>
                <th>Etat</th>
              </tr>
           </thead>
    <tbody>
    {% for system in systemListe %}
            {% if system.actif == true %}
            <tr>
                <td>{{ system.nom}}</td>
                <td>{{ system.url }}</td>
                <td><a href="{{ path('system_reactive', {'id' : system.id}) }}" class="btn btn-success">Réactiver le système</a></td>
                </tr>
            {%endif%}
    {% endfor %}
    </tbody>

</table>

<a href="{{ path('system') }}" class="btn btn-default">Retour</a>
{% endblock %}
 