{% extends "base.html.twig" %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block title %}
    {{parent()}}
    - Modification du système
{% endblock %}
{% block body %}
    <style>
        label {
            display: block;
        }
    </style>
    <font color="white">
        <h1>
            <b>Modification d'un système</b>
        </h1>
    </font>
    <section class="login-form">
        {{form_start(form,{ 'attr': {'role': 'login'} })}}
        {{form_row(form.nom,{ 'attr': {'class': 'form-control input-lg'} })}}
        {{form_row(form.url,{ 'attr': {'class': 'form-control input-lg'} })}}
        {{form_row(form.categSysteme,{ 'attr': {'class': 'form-control input-lg'} })}}
        {{form_row(form.user,{ 'attr': {'class': 'form-control input-lg'} })}}
        {{form_row(form.niveauUrgence,{ 'attr': {'class': 'form-control input-lg'} })}}
        {{form_row(form.repetition,{ 'attr': {'class': 'form-control input-lg'} })}}
        {{form_row(form.requete,{ 'attr': {'class': 'form-control input-lg'} })}}
        {{form_row(form.resultatAttendu,{ 'attr': {'class': 'form-control input-lg'} })}}
        <a href="{{ path('system_read') }}" class="btn btn-default">Retour à la liste</a>
        <button type="submit" id="form_save" name="form[save]" class="btn btn-info">Confirmer la modification</button>
        <p>
            {% for info in app.flashes('info') %}
                <div class="flash-notice">
                    {{ info }}
                </div>
            {% endfor %}
        </p>

        {{form_end(form)}}
    </section>
</body>
{% endblock %}