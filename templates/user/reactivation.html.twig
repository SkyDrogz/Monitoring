{% extends "base.html.twig" %}
{%block title %}
    {{parent()}} - Liste des utilisateurs
{%endblock%}
{%block body %}
<title>Liste des Utilisateurs</title>
<h1>Liste des Utilisateurs</h1>

<table width="100%">


    <tr>
        <th>Identifiant</th>
        <th>Role</th>
        <th>Téléphone</th>
        <th>E-maill</th>
        <th>Date connexion</th>
        <th>Date deconnexion</th>
    </tr>

    {% for user in userListe %}

        {% if user.actif == false %}
        <tr>
            <td>{{ user.identifiant}}</td>
            <td>{{ user.role }}</td>
            <td>{{ user.Tel }}</td>
            <td>{{ user.email }}</td>
            <td>{{user.dateConnexion|date("m/d/y")}}</td>
            <td>{{user.dateDeconnexion|date("m/d/y")}}</td>
            <td><a href="{{ path('user_reactive', {'id' : user.id}) }}" class="btn btn-success">réactiver l'utilisateur</a></td>
            
        </tr>
        {%endif%}
    {% endfor %}

</table>
<a href="{{ path('user') }}" class="btn btn-default">Retour</a>
{%endblock%}

