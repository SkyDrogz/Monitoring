{% extends "base.html.twig" %}
{%block title %}
    {{parent()}} - Liste des utilisateurs
{%endblock%}
{%block body %}
<link rel="stylesheet" href="{{ asset('css/test.css') }}">
<div class="span7">

<h1><font color="white">Liste des utilisateurs</font></h1>

<div class="widget stacked widget-table action-table">
				<div class="widget-content">

					<table class="table table-striped table-bordered">
						<thead>
            <tr>
                <th>Identifiant</th>
                <th>Role</th>
                <th>Téléphone</th>
                <th>E-maill</th>
                <th>Entreprise</th>
                <th>Date connexion</th>
                <th>Date deconnexion</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
						</thead>
						<tbody>

            {% for user in userListe %}
                {% if user.actif == false and user.role != null %}
                    <tr>

                        <td>{{ user.identifiant}}</td>
                        {% if user.role.nomRole == "ROLE_SUPER_ADMIN" %}
                        <td>ADMIN</td>
                        {%else%}
                        <td>USER</td>
                        {%endif%}
                        <td>{{ user.Tel }}</td>
                        <td>{{ user.email }}</td>
                        {% if user.entreprise == null %}
                        <td>{{ "Pas d'entreprise associée" }}</td>
                        {% else %}
                        <td>{{ user.entreprise.libelle }}</td>
                        {% endif %}
                        <td>{{user.dateConnexion|date("Y-m-d H:i:s")}}</td>
                        <td>{{user.dateDeconnexion|date("Y-m-d H:i:s")}}</td>
                        <td><a href="{{ path('user_reactive', {'id' : user.id}) }}" class="btn btn-success">Réactiver</a></td>
                        <td><a href="{{ path('user_suppressionDef', {'id' : user.id}) }}" class="btn btn-danger">Supprimer définitivement</a></td>
                    </tr>
                {% endif %}

    {% endfor %}

</table>
<a href="{{ path('index') }}" class="btn btn-default">Retour</a>
{%endblock%}
