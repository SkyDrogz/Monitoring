
<title>Liste des Utilisateurs</title>
<h1>Liste des Utilisateurs</h1>

<table>


    <tr>
        <th>Identifiant</th>
        <th>Role</th>
        <th>Téléphone</th>
        <th>E-maill</th>
        <th>Date connexion</th>
        <th>Date deconnexion</th>
    </tr>

    {% for user in userListe %}

        {% if user.actif == false %}
        <tr>
            <td>{{ user.identifiant}}</td>
            <td>{{ user.role }}</td>
            <td>{{ user.Tel }}</td>
            <td>{{ user.email }}</td>
            <td>{{user.dateConnexion|date("m/d/y")}}</td>
            <td>{{user.dateDeconnexion|date("m/d/y")}}</td>
            <td><a href="{{ path('user_reactive', {'id' : user.id}) }}">réactiver l'utilisateur</a></td>
            
        </tr>
        {%endif%}
    {% endfor %}

</table>

<a href="{{ path('user') }}">Retour</a>

