                {{form_row(form.role,{ 'attr': {'class': 'form-control input-lg'} })}}
                <a href="{{ path('user_read') }}" class="btn btn-default">Retour Ã  la liste</a>
                <button type="submit" id="form_save"  name="form[save]" class="btn btn-info">Confirmer l'ajout</button>
                <p>
                    {% for info in app.flashes('info') %}
                        <div class="flash-notice">
                            {{ info }}
                        </div>
                    {% endfor %}
                 </p>

                {{form_end(form)}}
              </section>
