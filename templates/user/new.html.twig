{% extends "base.html.twig" %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{%block title %}
    {{parent()}} - Ajout d'un utilisateur
{%endblock%}
{%block body%}
<style>
label
{
display: block;
}
</style>
<h2><b><font color="white">Ajout d'un nouvel utilisateur</font></b></h2>
</br>
<body>
        <section class="login-form">
                {{form_start(form,{ 'attr': {'role': 'login'} })}}
