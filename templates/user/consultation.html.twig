{% extends "base.html.twig" %}
{%block title %}
    {{parent()}} - Liste des utilisateurs
{%endblock%}
{%block body%}
<link rel="stylesheet" href="{{ asset('css/test.css') }}">
<div class="span7">

<h1><font color="white">Liste des utilisateurs</font></h1>

<div class="widget stacked widget-table action-table">
				<div class="widget-content">

					<table class="table table-striped table-bordered">
						<thead>
            <tr>
                <th>Identifiant</th>
                <th>Role</th>
                <th>Téléphone</th>
                <th>E-maill</th>
                <th>Entreprise</th>
                <th>Date connexion</th>
                <th>Date deconnexion</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
						</thead>
						<tbody>

            {% for user in userListe %}
                {% if user.actif == true %}
                    <tr>

                        <td>{{ user.identifiant}}</td>
                        {% if user.role.nomRole == "ROLE_SUPER_ADMIN" %}
                        <td>ADMIN</td>
                        {%else%}
                        <td>USER</td>
                        {%endif%}
                        <td>{{ user.Tel }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.entreprise.libelle }}</td>
                        <td>{{user.dateConnexion|date("Y-m-d H:i:s")}}</td>
                        <td>{{user.dateDeconnexion|date("Y-m-d H:i:s")}}</td>
                        <td><a href="{{path('user_edit',{'id' : user.id}) }}"class="btn btn-warning"><span class="glyphicon glyphicon-pencil"></span></a></td>
                        <td><a href="{{path('user_suppression',{'id' : user.id}) }}"class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span></a></td>

                    </tr>
                {% endif %}

            {% endfor %}
							</tbody>
						</table>

				</div> <!-- /widget-content -->

			</div> <!-- /widget -->
            </div>
            {%endblock%}
