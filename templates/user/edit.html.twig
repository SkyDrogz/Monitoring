{% extends "base.html.twig" %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{%block title %}
    {{parent()}} - Modifier l'utilisateur
{%endblock%}
{%block body %}
<style>
label
{
display: block;
}
</style>
<h1><b>Modification d'un utilisateur</b></h1>
<section class="login-form">
        {{form_start(form,{ 'attr': {'role': 'login'} })}}
        <h2><a href="https://www.nexus-creation.com"/><img src="https://www.nexus-creation.com/wp-content/uploads/thegem-logos/logo_58484d0c49b49620464808e1247ba5f9_1x.png"></a></img></h2>
        <h6>Ce formulaire envoi une demande de compte. Si elle a été approuvée par l'administrateur, <a href="{{path('login')}}">veuillez cliquer ici.</a></h6>
        {{form_row(form.identifiant,{ 'attr': {'class': 'form-control input-lg'} })}}
        {{form_row(form.password,{ 'attr': {'class': 'form-control input-lg'} })}}
        {{form_row(form.email,{ 'attr': {'class': 'form-control input-lg'} })}}
        {{form_row(form.tel,{ 'attr': {'class': 'form-control input-lg'} })}}
        <button type="submit" id="form_save"  name="form[save]" class="btn btn-lg btn-primary btn-block">Inscription</button>
        <p>
            {% for info in app.flashes('info') %}
                <div class="flash-notice">
                    {{ info }}
                </div>
            {% endfor %}
         </p>
            
        {{form_end(form)}}
      </section>

<a href="{{ path('user_consultation') }}" class="btn btn-warning">Retour à la liste</a>

{%endblock%}
